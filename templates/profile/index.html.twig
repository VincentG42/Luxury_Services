{% extends 'base.html.twig' %}

    {% block meta %}
        <meta name="base_url" content="https://assets-luxury.projets.garage404.com">
        <meta name="csrf-token" content="utSEZUUxgneXBCQY5My9Djz8rVhqLiG7PLq3ThDA">
        <!--  favicon -->
        <link rel="shortcut icon" href="{{ asset('assets/img/luxury-services-logo.png')}}">
    {% endblock %}

    {% block stylesheets %}
        <style>
            select {
                display: block!important;
            }
        </style>

        {% endblock %}
{% block body %}

<div class="base">

    <!-- Page -->
    <div class="page">

        <!-- Page Header-->
        <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="white-text">Your profile</h2>
                        <span class="white-text">Personnal & Professionnal informations</span>
                        <ol class="breadcrumb">
                            <li><a href="#!">Home</a></li>
                            <li class="active">Profile</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>


        <!-- Page Content-->
        <section class="gray-bg">
            <div class="container">
                <div class="row">
                    <div class="score-container">
                        <h4>
                            <img src="https://i.gifer.com/p5.gif" style="height: 80px; width: 201px;"> &nbsp;
                            &nbsp; Hooray ! Your profile is complete.
                        </h4>
                        <div class="c100 p100 small complete ">
                            <span>100%</span>
                            <div class="slice">
                                <div class="bar"></div>
                                <div class="fill"></div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </section>

        {{ form_start(form,{
                            'attr':{
                                'id':'candidateForm',
                                'method' : 'POST',
                                'role':'form',
                                'accept-char':'UTF-8',
                                'autocomplete': 'off',
                                'data-parsley-validate':'true',
                                'enctype':"multipart/form-data"
                            }
                        }) }}
            <input name="_token" type="hidden" value="UYfchy67WuTVzhSstPK1RDZEIfgqpKCcLnLyhf8a">
            <section class="section-padding">
                <div class="container">
                    <div class="row">
                        <h3 class="text-extrabold">Your personal informations</h3>
                        <div class="col-xs-12 col-sm-6 col-md-4">
                            <div class="input-field">
                                {{ form_widget(form.gender,{
                                    'attr':{
                                        'id':'gender',
                                        'name':'gender',
                                    }
                                }) }}
                                <label for="gender" class="active">Gender</label> 
                            </div>
                        </div>
                        <div class="clearfix visible-sm"></div>
                        <div class="col-xs-12 col-sm-6 col-md-4">
                            <div class="input-field">
                                {{ form_widget(form.firstName,{
                                    'type': 'text',
                                    'attr': {
                                        'class': 'form-control active',
                                        'name': 'first_name',
                                        'id': 'first_name',                                   
                                    }
                                    }) }}

                                {{ form_label(form.firstName, 'First name', 
                                                            {'label_attr': 
                                                            {'for': 'first_name'}}) }}
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-4">
                            <div class="input-field">
                                    {{ form_widget(form.lastName,{
                                        'type': 'text',
                                        'attr': {
                                            'class': 'form-control active',
                                            'name': 'last_name',
                                            'id': 'last_name',                                   
                                        }

                                    }) }}
                                    {{ form_label(form.lastName, 'Last name', 
                                                            {'label_attr': 
                                                            {'for': 'last_name'}}) }}
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-4">
                            {# <div class="input-field">
                                
                                <input  id="current_location" name="current_location" type="text" value="">
                                <label for="current_location">Current location</label>
                            </div> #}
                        </div>
                        <div class="col-xs-12 col-sm-8">
                            <div class="input-field">
                                {{ form_widget(form.adress,{
                                        'type': 'text',
                                        'attr': {
                                            'class': 'form-control active',
                                            'name': 'address',
                                            'id': 'address',                                   
                                        }

                                    }) }}

                                    {{ form_label(form.adress, 'Adress', 
                                                            {'label_attr': 
                                                            {'for': 'address'}})
                                    }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-4">
                            <div class="file-field input-field"
                                    style="margin-top: 32px;">
                                    {#  PHOTO #}
                                <div class="btn btn-lg primary waves-effect waves-light">
                                    {{ form_widget(form.picturefile,
                                            {
                                            'type': 'file',
                                            'attr': {
                                                'class': 'form-control active',
                                                'name': 'photo',
                                                'id': 'photo',
                                                'size':'20000000',
                                                'accept':'.pdf,.jpg,.doc,.docx,.png,.gif',                                   
                                                }
                                            }) 
                                    }}
                                    <span><i class="material-icons">insert_photo</i> Photo</span>
                                </div>

                                <div class="existing-file">
                                {% if  candidat.picture %}
                                    <a href="{{ asset('uploads/medias/' ~ candidat.picture.filename) }}" 
                                        target="_blank"><i class="material-icons">&#xE24D;</i> 
                                        {{ candidat.picture.originalName ? candidat.picture.originalName : ' ' }}
                                    </a>
                                {% endif %}
                                    
                                </div>
                                <div class="file-path-wrapper">
                                    <input class="file-path validate" type="text" placeholder="Upload your ID photo" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-8">
                            <div class="row">
                                <div class="col-xs-12 col-sm-6">
                                    <div class="input-field">
                                        {{ form_widget(form.country,{
                                            'type': 'text',
                                            'attr': {
                                                'class': 'form-control active',
                                                'name': 'country',
                                                'id': 'country',                                   
                                                }

                                            }) }}

                                        {{ form_label(form.country, 'Country', 
                                                            {'label_attr': 
                                                            {'for': 'country'}}) }}
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6">
                                    <div class="input-field">
                                        {{ form_widget(form.nationality,{
                                            'type': 'text',
                                            'attr': {
                                                'class': 'form-control active',
                                                'name': 'nationality',
                                                'id': 'nationality',                                   
                                                }

                                            }) }}

                                        {{ form_label(form.nationality, 'Nationality', 
                                                            {'label_attr': 
                                                            {'for': 'nationality'}}) }}
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6">
                                    <div class="input-field">
                                        {{ form_widget(form.birthDate,{
                                            'type': 'date',
                                            'attr': {
                                                'class': 'datepicker',
                                                'name': 'birth_date',
                                                'id': 'birth_date',                                   
                                                }

                                        }) }}

                                        {{ form_label(form.birthDate, 'Birthdate', 
                                                            {'label_attr': 
                                                            {'for': 'birth_date'}}) }}
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-6">
                                    <div class="input-field">
                                        {{ form_widget(form.birthPlace,{
                                            'type': 'text',
                                            'attr': {
                                                'class': 'form-control active',
                                                'name': 'birth_place',
                                                'id': 'birth_place',                                   
                                                }

                                            }) }}

                                        {{ form_label(form.birthPlace, 'BirthPlace', 
                                                            {'label_attr': 
                                                            {'for': 'birth_place'}}) }}

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-40">
                        <h3 class="text-extrabold">Your professional profile</h3>
                        <div class="col-xs-12 col-sm-6">

                            <div class="card card-panel passport">
                                <div class="file-field input-field">
                                {# PASSPORT #}
                                    <div class="btn btn-lg primary waves-effect waves-light">
                                            {{ form_widget(form.passportfile,
                                            {
                                            'type': 'file',
                                            'attr': {
                                                'class': 'form-control active',
                                                'name': 'passport',
                                                'id': 'passport',
                                                'size':'20000000',
                                                'accept':'.pdf,.jpg,.doc,.docx,.png,.gif',                                   
                                                }

                                            }) 
                                            }}

                                        <span><i class="material-icons">&#xE24D;</i> Passport</span>
                                    </div>
                                    {% if candidat.passport %}
                                    <div class="existing-file">
                                        <a href="{{ asset('uploads/medias/' ~ candidat.passport.filename) }}" target="_blank"><i class="material-icons">&#xE24D;</i> {{ candidat.passport.originalName ? candidat.passport.originalName : ' ' }}</a>
                                    </div>
                                    {% endif %}
                                    <div class="file-path-wrapper">
                                        <input class="file-path validate" type="text" placeholder="Upload your passport" readonly>
                                    </div>
                                </div>

                                <div class="file-field input-field">
                                {# CV #}
                                    <div class="btn btn-lg primary waves-effect waves-light">
                                        {{ form_widget(form.cvfile,
                                            {
                                            'type': 'file',
                                            'attr': {
                                                'class': 'form-control active',
                                                'name': 'cv',
                                                'id': 'cv',
                                                'size':'20000000',
                                                'accept':'.pdf,.jpg,.doc,.docx,.png,.gif',                                   
                                                }

                                            }) 
                                        }}
                                        <span><i class="material-icons">&#xE24D;</i> CV</span>
                                    </div>
                                    {% if candidat.cv %}    
                                    <div class="existing-file">
                                        <a href="{{ asset('uploads/medias/' ~ candidat.cv.filename) }}" target="_blank"><i class="material-icons">&#xE24D;</i> {{ candidat.cv.originalName}}</a>
                                    </div>
                                    {% endif %}
                                    <div class="file-path-wrapper">
                                        <input class="file-path validate" type="text" placeholder="Upload your Curriculum Vitae" readonly>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-6">
                            <div class="col-xs-12 col-sm-12">
                                <div class="input-field" style="margin-top: 5px;">
                                    {{ form_widget(form.jobCategory,{
                                        'attr':{
                                            'id':'job_sector',
                                            'name':'job_sector',
                                            'multiple data-placeholder':'Type in or Select job sector you would be interested in'
                                        }
                                    }) }}
                                <label for="job_sector" class="active">Interest in job sector</label>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12">
                                <div class="input-field">
                                    {{ form_widget(form.experience,{
                                        'attr':{
                                            'id':'experience',
                                            'name':'experience',
                                        }
                                    }) }}
                                    <label for="experience" class="active">Experience</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12">
                            <div class="input-field">
                                    {{ form_widget(form.shortDescription,{
                                        'attr':{
                                            'id':'description',
                                            'name':'description',
                                            'class':'materialize-textarea',
                                            'cols':'50',
                                            'rows':'10',                                        }
                                    }) }}
                                    {{ form_label(form.shortDescription, 'Short description for your profile, as well as more personnal informations (e.g. your hobbies/interests ). You can also paste any link you want.', 
                                                            {'label_attr': 
                                                            {'for': 'description'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="section-padding gray-bg">
                <div class="container">
                    <div class="row">
                        <h3 class="text-extrabold">Your K-Yachting account</h3>
                        <div class="col-xs-12 col-sm-4">
                            <div class="input-field">
                                <input  id="email" name="email" type="email" value="">
                                <label for="email">Email</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-4">
                            <div class="input-field">
                                <input id="password" name="password" type="password" value="">
                                <label for="password">Change your password here</label>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-4">
                            <div class="input-field">
                                <input id="password_repeat" name="password_repeat" type="password" value="">
                                <label for="password_repeat">Confirm your new password</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 mt-40 mb-80 delete-account">
                            <a href="#!" onclick="return prompt('Please Type \'Delete my account\' to delete your K-Yachting Services account:') == 'Delete my account'" class="btn btn-block btn-lg waves-effect waves-light"><i class="material-icons">&#xE872;</i>Delete my account</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-4">
                            <a href="#!" class="btn btn-block btn-lg border primary waves-effect waves-light"><i class="fa fa-long-arrow-left"></i> Back home</a>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-4">
                            <button type="submit" class="btn btn-block btn-lg gradient secondary waves-effect waves-light">
                                <span><strong>UPDATE</strong> NOW</span>
                            </button>
                        </div>
                    </div>

                </div>
            </section>
        {{ form_end(form) }}

    </div>

</div>




{% endblock %}

{% block javascriptsBottom %}
<script type="text/javascript">

    onAppReady(function() {
        $('.preload').remove();
    });
</script>

{% endblock %}

